{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "./public",
        "rootDir": "./src",
        "strict": true,
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "paths": {
            "@interfaces/*": [
                "interfaces/*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@types/*": [
                "types/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@static/*": [
                "static/*"
            ],
            "@models/*": [
                "models/*"
            ],
            "@config/*": [
                "config/*"
            ],
        }
    },
    "include": [
        "src/**/*",
        "service-sorker.js"
    ],
    "exclude": [
        "public"
    ]
}